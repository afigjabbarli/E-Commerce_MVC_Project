@using E_Commerce_Platform.ViewModels.User;
@model UserAddViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title style="color: #D10024;">User Registration</title>
    <!-- Include Bootstrap CSS -->
   
    <!-- Include custom CSS -->
    <style>
        body {
            background-color: black;
        }

        .container-input {
            width: 80%;
            background-color: #15161D;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 0px auto;
        }

        .form-group label {
            color: white; /* Change label color to red */
        }
        .form-group input {
            font-size:20px;
            border: 5px solid grey;
            border-radius: 16px;
            height:50px
        }

        .form-group button{
            height: 50px;
            width: 20%;
            border:5px solid white;
            border-radius:16px;
        }

        .form-group button {
            font-size: 20px;
           font-weight:600;
        }
    </style>
</head>
<body>
    <div class="container-input">
        <h2 style="color:red">User Registration</h2>
        <form id="registrationForm" asp-controller="Auth" asp-action="Register" method="post">
            <!-- Name Input -->
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" name="Name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Name is required.</div>
            </div>

            <!-- Surname Input -->
            <div class="form-group">
                <label for="Surname">Surname</label>
                <input type="text" class="form-control" id="Surname" asp-for="Surname" name="Surname" required>
                <span asp-validation-for="Surname" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Surname is required.</div>
            </div>

            <!-- Email Input -->
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" name="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Invalid email address format.</div>
            </div>

            <!-- Email Password Input -->
            <div class="form-group">
                <label for="EmailPassword">Email Password</label>
                <input type="password" class="form-control" id="EmailPassword" asp-for="EmailPassword" name="EmailPassword" required>
                <span asp-validation-for="EmailPassword" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Email password is required.</div>
            </div>

            <!-- PIN Input -->
            <div class="form-group">
                <label for="PIN">PIN</label>
                <input type="text" class="form-control" id="PIN" asp-for="PIN" name="PIN" required pattern="^[0-9A-Z]{7}$">
                <span asp-validation-for="PIN" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">PIN must be a 7-digit number.</div>
            </div>

            <!-- Date of Birth Input -->
            <div class="form-group">
                <label for="DateofBirth">Date of Birth</label>
                <input type="date" class="form-control" id="DateofBirth" asp-for="DateofBirth" name="DateofBirth" required>
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Date of Birth is required.</div>
            </div>

            <!-- Gender Input -->
            <div class="form-group">
                <label for="Gender">Gender</label>
                <select class="form-control" id="Gender" asp-for="Gender" name="Gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Gender is required.</div>
            </div>

            <!-- Account Balance Input -->
            <div class="form-group">
                <label for="AccountBalance">Account Balance</label>
                <input type="number" class="form-control" id="AccountBalance" asp-for="AccountBalance" name="AccountBalance" required min="0">
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Account balance is required and must be a non-negative number.</div>
            </div>

            <!-- Physical Image Name Input -->
            <div class="form-group">
                <label for="PhysicalImageName">Physical Image Name</label>
                <input type="file" class="form-control" id="PhysicalImageName" asp-for="PhysicalImageName" name="PhysicalImageName" required>
                <span asp-validation-for="PhysicalImageName" class="text-danger"></span>
                <div style="color:red" class="invalid-feedback">Physical image name is required.</div>
            </div>

            <!-- Save and Back Buttons -->
            <div class="form-group text-center">
                <button style="background-color:blue" type="submit" class="btn btn-primary mr-2">Save</button>
                <button style="background-color:red" type="button" class="btn btn-secondary" onclick="goBack()">Back</button>
            </div>
        </form>
    </div>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Form Validation and Ajax Request Script -->
    <script>
        

        // Back button functionality
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
